@{
    ViewData["Title"] = "View Appointments";
}

@model List<Appointment>

@if (Model.Count < 1)
{
<h3>No Appointments Scheduled</h3>
<a class="btn btn-primary" asp-controller="Home" asp-action="SignUp">Sign Up Now</a>
}
else
{

<table class="table table-bordered table-striped">

    <thead class="font-weight-bold">
        <tr>
            <td>Group Name</td>
            <td>Group Size</td>
            <td>Email Address</td>
            <td>Phone Number</td>
            <td>Date</td>
            <td>Time</td>
        </tr>
    </thead>

    <tbody>
        @foreach (var app in Model)
        {
        <tr>
            <td>@app.GroupName</td>
            <td>@app.GroupSize</td>
            <td>@app.Email</td>
            <td>@app.PhoneNumber</td>
            <td>@app.Date.ToShortDateString()</td>
            <td>@app.GetTime()</td>
            <td> <a class="btn btn-primary" asp-controller="Home" asp-action="Edit" asp-route-id="@app.AppointmentID">Edit</a> </td>
            <td> <a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@app.AppointmentID">Delete</a> </td>
        </tr>
        }
    </tbody>

</table>
}